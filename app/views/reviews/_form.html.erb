<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: "Content" %>

  <p>Rating:</p>
  <% [1, 2, 3, 4, 5].each do |num| %>
    <label>
      <%= f.radio_button :rating, num %> <%= num %>
    </label>
  <% end %>

  <%= f.submit "Submit Review", class: "btn btn-success" %>
<% end %>
